.side-bar__side-header
  .side-header__user-name
    = current_user.name
  .side-header__links
    = link_to new_group_path do
      %i.fas.fa-edit.add-group
    = link_to edit_user_path(current_user) do
      %i.fa.fa-cog.user-edit

.side-bar__group-list
  .group-list__group
    - current_user.groups.each do |group|
      .group-list__group
        =link_to "#" do
          .group-list__group__name
            =group.name
          .group-list__group__top-message
            no message


